<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">Edit document</h4>
        </div>
        <div class="modal-body">

            <form id="form-edit-document">
                <input type="hidden" value="{{ csrf_token() }}" id="csrf-token" />

                <div class="form-group">
                    <label for="document-title">Title:</label>
                    <input type="text" class="form-control" id="document-title" placeholder="Enter title"
                           value="{{ document.getTitle() }}">
                </div>
                <div class="form-group">
                    <label for="document-description">Description:</label>
                    <textarea class="form-control" id="document-description" rows="4"
                              placeholder="Optional description">{{ document.getDescription() }}</textarea>
                </div>
                <div class="form-group">
                    <label for="document-url">URL:</label>
                    <input type="text" class="form-control" id="document-url" placeholder="Enter URL to the document"
                           value="{{ document.getUrl() }}">
                    <p class="help-block small">eg. from Google Docs, Dropbox etc.</p>
                </div>
                <div class="form-group">
                    <label for="document-description">Tags:</label>
                    <input type="text" class="form-control" id="document-url" placeholder="Start typing to see suggestions" />
                </div>
                <div class="form-group">
                    <label style="margin-right: 10px;">Visible to:</label>
                    <label class="radio-inline">
                        {% set boardOnly = "" %}
                        {% set allMembers = "" %}
                        {% if document.isVisibleToAllMembers() %}
                            {% set allMembers = "checked" %}
                        {% else %}
                            {% set boardOnly = "checked" %}
                        {% endif %}
                        <input type="radio" name="document-access" id="document-access-all" value="all" {{ allMembers }}> All members
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="document-access" id="document-access-board" value="board" {{ boardOnly }}> Board members
                    </label>
                </div>
            </form>

        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <a href="{{ route('documents.update', document.getId()) }}" class="btn btn-primary" id="btn-update-document">Save</a>

        </div>
    </div>
</div>