{% set page_title = 'Sign in' %}

{% extends "base.twig" %}

{% block body %}

    <div class="row">
        <div class="col-md-4 well center-block">
            <legend style="margin-top: -20px;">Please Sign In</legend>

            {% if Session.has('auth-error') %}
                <div class="alert alert-danger alert-dismissable">
                    <a class="close" data-dismiss="alert" aria-hidden="true" href="#">Ã—</a>
                    {{ Session.get('auth-error') }}
                </div>
            {% endif %}

            <form role="form" method="post">
                <input type="hidden" name="_token" value="{{ csrf_token() }}" />
                <div class="form-group">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Email address"
                           value="{{ Input.old('email') }}">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" id="pasword" name="password" placeholder="Password">
                </div>
                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="remember" value="yes"> Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-info btn-block">Sign in</button>

                <a href="{{ route('auth.facebook') }}" class="btn btn-block btn-default text-center">
                    <i class="fa fa-facebook"></i>
                    Sign in with Facebook
                </a>

                <a href="{{ route('members.register') }}" class="btn btn-default btn-block">Create account</a>
            </form>
        </div>
    </div>

{% endblock %}