{% set page_title = 'Announce a meeting' %}

{% extends "base.twig" %}

{% block body %}

    <h1>Announce a meeting:</h1>

    <div class="row">
        <div class="col-md-12">

            <form role="form" method="post" action="{{ route('meetings.store') }}">
                <input type="hidden" name="_token" value="{{ csrf_token() }}" />

                {% if Session.has('errorMessages') %}
                    <div class="alert alert-danger">
                        <p><strong>Please fix the following errors:</strong></p>
                        <ul>
                            {% for message in Session.get('errorMessages') %}
                                <li>{{ message }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <div class="row">

                    <div class="col-md-5">
                        <legend>Basic information:</legend>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="title">Title:</label>
                                    <input type="text" class="form-control" id="title" name="title" placeholder="Regular weekly meeting">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="location">Location:</label>
                                    <input type="text" class="form-control" id="location" name="location" placeholder="Enter meeting location">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="date">Date:</label>
                                    <div class="input-group date">
                                        <input type="text" class="form-control" id="date" name="date"
                                               placeholder="{{ "tomorrow"|date("Y-m-d") }}">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="time">Time:</label>
                                    <div class="input-group">
                                        <input type="text" class="form-control" id="time" name="time"
                                               placeholder="{{ "now"|date("H:i") }}">
                                        <span class="input-group-addon">
                                            <i class="glyphicon glyphicon-time"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="checkbox">
                                    <label><input type="checkbox" value="1" name="notify" checked>Send notification to all members</label>
                                </div>
                            </div>
                        </div>


                        <legend>Attached files</legend>

                        <div class="row"  id="actions">

                            <div class="col-md-12">
                                <span class="pull-left help-block small">
                                    Drop your files here or use the button to add an attachment.
                                </span>

                                <span class="btn btn-info btn-sm fileinput-button pull-right">
                                    <i class="glyphicon glyphicon-plus"></i>
                                    <span>Add file</span>
                                </span>

                            </div>

                        </div>

                        <div class="files" id="previews" style="margin-top: 15px;">


                            <div id="template" class="file-row" style="padding: 8px; border-top: 1px solid #ddd">

                                <div class="row">
                                    <div class="col-md-7">
                                        <span class="small" style="word-wrap: break-word" data-dz-name></span>
                                    </div>
                                    <div class="col-md-4 text-right">
                                        <span class="small text-muted" data-dz-size></span>
                                    </div>
                                    <div class="col-md-1 text-right" data-dz-remove>
                                        <a href="" class="delete">
                                            <i class="glyphicon glyphicon-remove"></i>
                                        </a>
                                    </div>
                                </div>

                                <div class="row" style="margin-top: 5px;">
                                    <div class="col-md-11">
                                        <div class="file-progress-bar"></div>
                                    </div>
                                </div>

                                <div class="row" style="margin-top: 5px;">
                                    <div class="col-md-11">
                                        <p class="small file-error-messages text-muted" style="display: none;">
                                            <span class="text-danger"><strong>Errors:</strong></span><br />
                                        </p>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </div>

                    <div class="col-md-7">
                        <legend>Details:</legend>

                        <div class="form-group">
                            <textarea class="form-control" name="details" id="txt-meeting-details" rows="12"></textarea>
                        </div>
                    </div>

                </div>

                <div class="row pull-right">
                    <div class="col-md-12 ">
                        <button type="submit" class="btn btn-info uploads-files" id="btn-create-meeting">Publish</button>
                    </div>
                </div>

            </form>

        </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">

        $(function() {

            var previewNode = document.querySelector("#template");
            previewNode.id = "";
            var previewTemplate = previewNode.parentNode.innerHTML;
            var parentNode = previewNode.parentNode;
            parentNode.removeChild(previewNode);

            var progressBars = [];
            var uploadedFiles = [];

            var myDropzone = new Dropzone(document.body, {
                url: "/meetings/files",
                parallelUploads: 1,
                previewTemplate: previewTemplate,
                autoQueue: false,
                previewsContainer: "#previews",
                clickable: ".fileinput-button"
            });

            myDropzone.on("addedfile", function(file) {

                var id = "f" + Date.now();

                file.id = id;

                var previewElement = $(file.previewElement);
                var el = previewElement.find('.file-progress-bar');

                el.attr('id', id);

                progressBars[id] = new ProgressBar.Line("#" + id, {
                    strokeWidth: 2,
                    color: '#c4e3f3',
                    trailColor: '#eee'
                });

                myDropzone.uploadFile(file);

            });

            myDropzone.on("uploadprogress", function(file, progress) {

                var progressBar = progressBars[file.id];
                progress = progress / 100;

                progressBar.animate(progress, {
                    duration: 1
                });

            });

            myDropzone.on("error", function(file, errors) {

                var previewElement = $(file.previewElement);
                var el = previewElement.find(".file-error-messages");

                if (errors.constructor === Array) {
                    for (var i in errors) {
                        var error = errors[i];

                        if (errors[i+1] != undefined) {
                            error += "<br />";
                        }

                        el.append(error);
                    }
                } else {
                    el.append(errors + "<br />");
                }

                previewElement.css('background', '#fcf8e3');

                el.show();

            });

            myDropzone.on("success", function(file, response) {
                uploadedFiles[file.id] = response;
            });

            myDropzone.on("removedfile", function(file) {
                delete uploadedFiles[file.id];
            });

            myDropzone.on("sending", function(file, xhr, formData) {
                formData.append("_token", $('[name=_token]').val());
            })

        });
    </script>

{% endblock %}