{# Twitter #}

{% set url = route('events.show', event.getId()) %}

<a href="https://twitter.com/share"
   class="twitter-share-button"
   data-text="{{ event.getTitle() }} by {{ event.getHost().getTitle() }}"
   data-url="{{ url }}" data-show-count="false">
    Tweet
</a>
<script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>

{# Facebook Share #}

<span class="fb-share-button" data-href="{{ url }}" data-layout="button_count" data-mobile-iframe="true">
                        <a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u={{ url }}">
                            Share
                        </a>
                    </span>

{# Facebook Like #}

<div class="fb-like" data-href="{{ url }}" data-layout="button_count" data-action="recommend" data-show-faces="false" data-share="false"></div>
