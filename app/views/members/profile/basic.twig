<div class="row">
    <div class="col-md-10">
        <a href="{{ route('members.edit', member.id) }}" class="text-muted pull-right"
                style="margin-top: 20px; margin-bottom: 10px;">
            <i class="glyphicon glyphicon-pencil"></i> Edit details
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <ul class="list-group text-right">
            <li class="list-group-item text-muted text-left">Personal information</li>
            <li class="list-group-item">
                <span class="pull-left"><strong>First name:</strong></span>
                {{ member.first_name }}
            </li>
            <li class="list-group-item">
                <span class="pull-left"><strong>Last name:</strong></span>
                {{ member.last_name }}
            </li>
            <li class="list-group-item">
                <span class="pull-left"><strong>Birthday:</strong></span>
                <span class="date-to-format">{{ member.birthday }}</span>
            </li>
        </ul>
    </div>

    <div class="col-md-6">
        <ul class="list-group text-right">
            <li class="list-group-item text-muted text-left">Education</li>
            <li class="list-group-item">
                <span class="pull-left"><strong>Faculty:</strong></span>
                {{ member.faculty }}
            </li>
            <li class="list-group-item">
                <span class="pull-left"><strong>Field of study:</strong></span>
                {{ member.field_of_study }}
            </li>
            <li class="list-group-item">
                <span class="pull-left"><strong>Expected year of graduation:</strong></span>
                2015
            </li>
        </ul>
    </div>
</div>

<div class="row">

    <div class="col-md-7">
        <ul class="list-group text-right">
            <li class="list-group-item text-muted text-left">Contact</li>
