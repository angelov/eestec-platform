{
	"name": "angelov/eestec-platform",
	"description": "EESTEC platform for local committees",
	"keywords": ["eestec", "organization"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.2.*",
        "twig/twig": "1.16.*@dev",
        "barryvdh/laravel-twigbridge": "dev-master",
        "ext-gd": "*",
        "way/generators": "2.*",
        "intervention/image": "2.*",
        "intervention/imagecache": "2.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
        "psr-4": {
            "Angelov\\Eestec\\Platform\\": "app/platform"
        }
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
