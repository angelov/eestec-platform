{
    "name": "angelov/eestec-platform",
    "description": "EESTEC platform for local committees",
    "keywords": ["eestec", "organization"],
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "twig/twig": "1.18.*",
        "rcrowe/twigbridge": "0.7.*@dev",
        "ext-gd": "*",
        "intervention/image": "2.*",
        "intervention/imagecache": "2.*",
        "nesbot/carbon": "1.*",
        "barryvdh/laravel-debugbar": "~2.0",
        "laravel/socialite": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~3.7",
        "mockery/mockery": "~0.9",
        "fzaninotto/faker": "1.4.0",
        "way/laravel-test-helpers": "dev-master",
        "fabpot/php-cs-fixer": "^1.9"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Angelov\\Eestec\\Platform\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
